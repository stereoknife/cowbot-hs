    README.md
    CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/stereoknife/cowbot-hs

common deps
  build-depends:
      aeson == 1.4.7.1
    , base >=4.7 && <5
    , bytestring >= 0.10 && < 0.11
    , exceptions
    , containers
    , discord-haskell >= 1.8.0 && < 1.9
    , data-default >= 0.7 && < 0.8
    -- , data-default == 0.7.1.1
    , emoji
    , first-class-families >= 0.8 && < 0.9
    , hedis >= 0.14 && < 0.15
    , html-entities
    , HTTP >= 4000.3 && < 4000.4
    , http-client == 0.7.2.1
    , http-client-tls
    , http-conduit >= 2.3 && < 2.4
    , http-types >= 0.12 && < 0.13
    , monad-loops == 0.4.3
    , mtl
    , parser-combinators
    , random
    , req
    , text
    , transformers
    , unliftio
    , unordered-containers
    , utility-ht == 0.0.15
    , vector

library cowbot-lib
  import: deps
  exposed-modules:
      Bot
      Howdy.Actions
      Howdy.Bot
      Howdy.Context
      Howdy.Parser
      Howdy.Parser.Trans

  hs-source-dirs:
      src
  default-extensions: OverloadedStrings LambdaCase MultiWayIf
  default-language: Haskell2010

executable cowbot-bin
  --import: deps
  build-depends:
      cowbot-lib
    , base >=4.7 && <5
  main-is: Main.hs
  other-modules:
      Paths_cowbot
  hs-source-dirs:
      app
  default-extensions: OverloadedStrings LambdaCase MultiWayIf
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010

test-suite cowbot-test
  import: deps
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      Paths_cowbot
  hs-source-dirs:
      test
  default-extensions: OverloadedStrings LambdaCase MultiWayIf
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010
